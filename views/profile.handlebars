
<div class="flex flex-col w-full lg:flex-row">
    
    <div class="grid flex-grow card bg-base-300 rounded-box place-items-center">
        <div class="card w-96 bg-base-100 shadow-xl project-list">
            <div class="card-body">
                <div>
                    <h3 class="card-title">Current Projects</h3>
                    {{#if projects.length}}
                    <div class="overflow-x-auto">
                      <table class="table w-full">
                        <!-- head -->
                        <thead>
                          <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Delete</th>
                          </tr>
                        </thead>
                        {{#each projects as |project|}}
                        <tbody>
                          <tr class="hover">
                            <th>{{project.id}}</th>
                            <td><a href="/project/{{project.id}}" class="basis-3/4">{{project.name}}</a></td>
                            <td><button class="basis-1/4">Delete</button></td>
                          </tr>
                        </tbody>
                        {{/each}}
                      </table>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <div class="divider">|</div> 

    <div class="grid flex-grow card bg-base-300 rounded-box place-items-center">
        
        <div class="card w-96 bg-base-100 shadow-xl">
            <div class="card-body">
            <h2 class="card-title">Create a new Project</h2>
            <form class="form-control w-full max-w-xs new-project-form">
                <label class="label" for="new-project-name">
                    <span class="label-text">Project name</span>
                </label>
                <input type="text" placeholder="enter a name for your project" class="input input-bordered w-full max-w-xs" id="new-project-name"/>
                <label class="label" for="new-project-description">
                    <span class="label-text">Short description</span>
                </label>
                <input type="text" placeholder="Type here" class="input input-bordered w-full max-w-xs" id="new-project-description"/>
            </form>  
            <div class="card-actions justify-center">
                <button class="btn btn-primary" type="submit">Create Project</button>
            </div>
            </div>
        </div>

    </div>

</div>

<script src="/js/profile.js"></script>