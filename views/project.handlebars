<div class="modal-container"  id="modal-container">
  <div class="modal-card w-6/12">
  {{> activities}}
    <div  class="flex justify-center w-full mt-8">
      <button class="btn btn-primary text-primary-content" id="continue">
        Continue Coding
      </button>
    </div>
  </div>
</div>

<div class="flex justify-center">
  <h2 class="card-title" style="font-size: 50px;margin: 40px 0;">{{this.name}}</h2>
</div>

<div class="flex flex-row w-full lg:flex-row">
  
  <div class="grid flex-grow card bg-base-300 rounded-box place-items-center" style="padding: 40px;">
    
    <div class="card w-96 bg-base-100 shadow-xl project-list flex justify-center" style="width: 500px;">
      <h2 class="card-title" style="margin-top: 10px; align-self: center">Timer</h2>
      <div id="timer" style="align-self: center;font-family: 'Orbitron', sans-serif;font-size: 50px;color:#00FF1A
;margin:">
        00:00:00
      </div>
      <div class="form-control" style="align-self: center;margin: 5px;">
        <div style="width: 250px">
          <input type="text" placeholder="How often will you break?" class="input input-bordered input-primary w-full max-w-xs" id="break-input" styles="margin: 5px;"/>
        </div>
      </div>
      <div class="form-control" style="align-self: center;margin: 10px;">
        <div style="width: 250px">
          <input type="text" placeholder="Enter your hourly rate" class="input input-bordered input-primary w-full max-w-xs" id="rate-input" styles="margin: 10px;"/>
        </div>
      </div>
      <div class="flex justify-center" style="">
        <button class="btn btn-square" onclick="startTimer()" style="width: 120px; margin-bottom: 10px;">Start Timer</button>
      </div>

      <div class="stats bg-primary text-primary-content" style="margin: 10px;">
        <div class="stat">
          <div class="stat-title">
            Time Logged
          </div>
          <div class="stat-value">
            <div id="total-time" style="margin-top: 5px;">
              <p id="hour-total">{{this.hr}}</p>
              <p>:</p>
              <p id="minute-total">{{this.min}}</p>
              <p>:</p>
              <p id="second-total">{{this.sec}}</p>
            </div>
          </div>
          <div class="stat-actions">
            <button class="btn btn-sm btn-success" id="save-time">Save Time and Wage</button>
          </div>
        </div>
      
        <div class="stat">
          <div class="stat-title">Current Charge</div>
            <div class="flex" style="flex-direction: row;">
              <p style="font-size: 2.5rem;">$</p>
              <p id="earned-wage" style="font-size: 2.5rem">{{this.wage}}</p>
            </div>
          </div>
        </div>
      </div>
    {{!-- end card --}}
    </div>

  </div>

</div>

<script src="/js/project.js"></script>
<script src="/js/updateWage.js"></script>
<script src="https://cdn.tailwindcss.com"></script>